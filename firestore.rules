rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function
    function userRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    // Users collection
    match /users/{userId} {
      allow read: if request.auth.uid == userId || userRole(request.auth.uid) == 'admin';
      allow write: if request.auth.uid == userId || userRole(request.auth.uid) == 'admin';
      allow create: if request.auth != null;
    }

    // Projects - managers see only their own
    match /projects/{projectId} {
      allow read: if userRole(request.auth.uid) == 'admin' 
                     || resource.data.manager_id == request.auth.uid;
      allow create: if request.auth != null;
      allow update, delete: if userRole(request.auth.uid) == 'admin' 
                               || resource.data.manager_id == request.auth.uid;
    }

    // Indicators
    match /indicators/{indicatorId} {
      allow read: if userRole(request.auth.uid) == 'admin' 
                     || get(/databases/$(database)/documents/projects/$(resource.data.project_id)).data.manager_id == request.auth.uid;
      allow create: if request.auth != null;
      allow update: if userRole(request.auth.uid) == 'admin' 
                       || get(/databases/$(database)/documents/projects/$(resource.data.project_id)).data.manager_id == request.auth.uid;
    }

    // Audit trail
    match /indicatorUpdates/{updateId} {
      allow read: if userRole(request.auth.uid) == 'admin' 
                     || get(/databases/$(database)/documents/projects/$(resource.data.project_id)).data.manager_id == request.auth.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.updated_by;
    }

    // Admin access
    match /{document=**} {
      allow read, write: if userRole(request.auth.uid) == 'admin';
    }
  }
}